@using ControleDeContatos.Enums
@model UsuarioModel
@{
    ViewData["Title"] = "Criar usuário";
}

<div class="text-center">

	<h1 class="display-4">Cadastrar usuário</h1>

</div>

    <form asp-controller="Usuario" asp-action="Criar" method="post">

        <div class="form-group mb-3">
            <label for="nome">Nome</label>
            <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome">
            @Html.ValidationMessageFor(x => x.Nome)
        </div>
        
        <div class="form-group mb-3">
            <label for="login">Login</label>
            <input type="text" asp-for="Login" class="form-control" placeholder="Digite o login">
            @Html.ValidationMessageFor(x => x.Login)
        </div>

         <div class="form-group mb-3">
            <label for="email">E-mail</label>
            <input type="text" asp-for="Email" class="form-control" placeholder="Digite o e-mail">
        @Html.ValidationMessageFor(x => x.Email)
        </div>

    <div class="form-group mb-3">
            <label for="perfil" class="form-label">Perfil</label>
             <select asp-for="Perfil" class="form-control">
                 <option value="0">Selecione</option>
                 <option value="@PerfilEnum.Admin">Administrador</option>
                 <option value="@PerfilEnum.Padrao">Padrão</option>
             </select>
        @Html.ValidationMessageFor(x => x.Perfil)
        </div>

    <div class="form-group mb-3">
        <label for="senha">Senha</label>
        <input type="password" asp-for="Senha" class="form-control" placeholder="Digite a senha">
        @Html.ValidationMessageFor(x => x.Senha)
    </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary w-100 mb-2">Adicionar</button>
        <a class="btn btn-secondary w-100" asp-controller="Usuario" asp-action="Index" role="button">Voltar</a>
        </div>

    </form>



